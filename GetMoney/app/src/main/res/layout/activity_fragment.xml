<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.ilink.pen.getmoney.activity.FragmentActivity">

    <fragment
        android:id="@+id/fgLeft"
        android:name="com.ilink.pen.getmoney.activity.LeftFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_left"></fragment>

    <FrameLayout
        android:id="@+id/flRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <fragment
            android:id="@+id/fgRight"
            android:name="com.ilink.pen.getmoney.activity.RightFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            tools:layout="@layout/fragment_right"></fragment>
    </FrameLayout>

</LinearLayout>
